<div class="row">
    <div class="col-lg-6">
        <h3>NO completados</h3>
        <ul class="list-group">
            <% @not_completed.each do |todo| %>
                <li class="list-group-item">
                    <%= todo.description %>
                </li>
            <% end %>
        </ul>
    </div>
    <div class="col-lg-6">
        <h3>Completados</h3>
        <ul class="list-group">
            <% @completed.each do |todo| %>
                <li class="list-group-item">
                    <%= todo.description %>
                </li>
            <% end %>
        </ul>
    </div>
</div>